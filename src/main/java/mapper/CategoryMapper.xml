<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace命名空间，作用就是对sql进行分类化管理，理解sql隔离 
注意：使用mapper代理方法开发，namespace有特殊重要的作用
-->
<mapper namespace="com.example.dao.CategoryDao">

  <resultMap id="CategoryResultMap" type="com.example.entity.Category" >
   <id column="cid" property="cid" jdbcType="VARCHAR" />
   <result column="cname" property="cname" jdbcType="VARCHAR" />
   <result column="desc" property="desc" jdbcType="VARCHAR" />
   <association column="pid" property="parent" javaType="com.example.entity.Category">
   	<result column="pid" property="cid"/>
   </association>
   <collection column="cid" property="children" select="findByParent"/>
  </resultMap>
  
  <select id="load" parameterType="string" resultMap="CategoryResultMap">
  	select *
  	from 
  		t_category 
  	where 
  		cid=#{cid}
  </select>  
  
  <select id="findByParent" parameterType="string" resultMap="CategoryResultMap">
  	select *
  	from 
  		t_category 
  	where 
  		pid=#{cid} 
  	order by
  		orderBy
  </select>
  
  <select id="findParent" resultMap="CategoryResultMap">
  	select * 
  		from t_category 
  		where pid is null 
  		order by orderBy
  </select>
  
  <select id="findChildrenByParent" parameterType="string" resultType="int">
  	select count(*) 
  		from t_category 
  		where pid=#{value}
  </select>
 
  <insert id="add" parameterType="map">
  	insert into t_category 
  		(cid,cname,pid,`desc`) 
		values
		(#{cid},#{cname},#{pid},#{desc})
  </insert>
   
  <update id="edit" parameterType="map">
  	update t_category 
  		set cname=#{cname},pid=#{pid},`desc`=#{desc} 
  		where cid=#{cid}
  </update>
  
  <delete id="delete" parameterType="string">
  	delete 
  		from t_category 
  		where cid=#{value}
  </delete>
	
</mapper>


